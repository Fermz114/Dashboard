<!DOCTYPE html>
<html lang="es">
<head>
  <%- include('partials/head') %>  
</head>
<body>
  <%- include('partials/sidebar') %> <!-- Sidebar incluido -->

  <div class="main-content"> <!-- Contenedor principal con margen -->
    <div class="container">
      <h1 class="mt-4 mb-4">Panel de Control</h1>

      <!-- Tarjetas de Estadísticas -->
      <div class="row">
        <div class="col-md-4 mb-3">
          <div class="card bg-primary text-white shadow">
            <div class="card-body text-center">
              <h5 class="card-title"><i class="fa-solid fa-box"></i> Productos</h5>
              <h2 class="card-text"><%= stats.productos || 0 %></h2>
            </div>
          </div>
        </div>

        <div class="col-md-4 mb-3">
          <div class="card bg-success text-white shadow">
            <div class="card-body text-center">
              <h5 class="card-title"><i class="fa-solid fa-dollar-sign"></i> Ventas Totales</h5>
              <h2 class="card-text">$<%= (stats.ventas || 0).toLocaleString('es-MX') %></h2>
            </div>
          </div>
        </div>

        <div class="col-md-4 mb-3">
          <div class="card bg-info text-white shadow">
            <div class="card-body text-center">
              <h5 class="card-title"><i class="fa-solid fa-users"></i> Clientes</h5>
              <h2 class="card-text"><%= stats.clientes || 0 %></h2>
            </div>
          </div>
        </div>
      </div>

      <!-- Enlaces Rápidos -->
      <div class="row mt-4">
        <div class="col-md-4 mb-3">
          <a href="/productos" class="btn btn-outline-primary btn-block btn-lg">
            <i class="fa-solid fa-box-open"></i> Administrar Productos
          </a>
        </div>
        <div class="col-md-4 mb-3">
          <a href="/ventas" class="btn btn-outline-success btn-block btn-lg">
            <i class="fa-solid fa-receipt"></i> Ver Ventas
          </a>
        </div>
        <div class="col-md-4 mb-3">
          <a href="/clientes" class="btn btn-outline-info btn-block btn-lg">
            <i class="fa-solid fa-address-book"></i> Gestionar Clientes
          </a>
        </div>
      </div>
    </div>
  </div>

</body>
</html>
