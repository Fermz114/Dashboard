<!DOCTYPE html>
<html>
<head>
  <%- include('partials/head') %> <!-- Opcional: Si tienes metatags comunes -->
</head>
<body>
  <div class="container">
    <h1 class="mb-4">Lista de Productos</h1>
    
    <% if (productos.length > 0) { %>
      <table class="table table-striped">
        <thead class="thead-dark">
          <tr>
            <th>Nombre</th>
            <th>Precio</th>
            <th>Categor√≠a</th>
            <th>Stock</th>
          </tr>
        </thead>
        <tbody>
          <% productos.forEach(producto => { %>
            <tr>
              <td><%= producto.Nombre %></td>
              <td>$<%= producto.Precio.toString().replace(/\.?0+$/, '') %></td> <!-- Formato decimal -->
              <td><%= producto.Categoria %></td>
              <td class="<%= producto.Stock < 10 ? 'text-danger' : '' %>">
                <%= producto.Stock %>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    <% } else { %>
      <div class="alert alert-info">No hay productos registrados</div>
    <% } %>
  </div>
</body>
</html>